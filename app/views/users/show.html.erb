<%# -------------------------------Content------------------------------- %>
<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 well">
      <%# -------------------------------Connected user------------------------------- %>
      <div class="well">
        <img src="https://source.unsplash.com/200x200/?portrait?sig=<%=rand(1..50)%>" 
                alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
        <h3><strong> User : </strong></h3>
        <h4><%= @user.first_name %> <%= @user.last_name %></h4>
      </div>
      <div>
        <%# -------------------------------Tags------------------------------- %>
        <%# <p><a href="#">Interests</a></p>
          <p>
            <span class="label label-default">News</span>
            <span class="label label-primary">W3Schools</span>
            <span class="label label-success">Labels</span>
            <span class="label label-info">Football</span>
            <span class="label label-warning">Gaming</span>
            <span class="label label-danger">Friends</span>
          </p> %>
        <%# -------------------------------End Tags------------------------------- %>
      </div>
    </div>
    <div class="col-sm-7">
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <h2 class="text-center">Plus d'informations sur cet utilisateur</h2>
              <h3>Description : <%= @user.description %></h3>
              <h3><span class="fas fa-envelope-open"></span><%= @user.email %></h3>
              <%= link_to "Modifier les informations de connexion", edit_user_registration_path, class: "btn btn-info" %>
            </div>
          </div>
        </div>
      </div>



      <% @events.each do |event| %>
        <% if event.admin_id == current_user.id%>
          <div class="row d-flex justify-content-end">
            <div class="col-sm-9 d-flex">
              <div class="well m-5">
                <b><%= event.title %></b>
                <p class="text-decoration-none"><%= link_to "Voir l'Event", event_path(event), class: "btn btn-info" %></p>
              </div>
            </div>
          </div>
        <% else %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

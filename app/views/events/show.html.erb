<div class="container text-center">
  <!--   <h1>Voici la page du potin n°<%= params[:id]%></h1>-->
  <div class="row">
    <div class="col-sm-3 well">
      <%# -------------------------------Connected user------------------------------- %>
      <div class="well">
        <img src="https://source.unsplash.com/200x200/?city?sig=<%=rand(1..100)%>" 
                alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
        <h3><strong><%= @event.admin.email %> </h3>
        </div>
        <div class="well">
          <%# -------------------------------Tags------------------------------- %>
          <%# <p><a href="#">Interests</a></p>
          <p>
            <span class="label label-default">News</span>
            <span class="label label-primary">W3Schools</span>
            <span class="label label-success">Labels</span>
            <span class="label label-info">Football</span>
            <span class="label label-warning">Gaming</span>
            <span class="label label-danger">Friends</span>
          </p> %>
          <%# -------------------------------End Tags------------------------------- %>
          <h3><strong>Ville : </strong></h3>
          <h4><%= @event.location %></h4>
        </div>
        <div >
        </div>
      </div>
      <div class="col-sm-7">
        <div class="row">
          <div class="col-sm-12">
            <div class="panel panel-default text-left">
              <div class="panel-body">
                <h2 class="text-center"><%= @event.title %></h2>
                <p> Description : <%= @event.description %></p>
                <p> Prix : <%= @event.price %>€</p>
                <p> Date de début : <%= @event.start_date %></p>
                <p> nb inscrit : <%= @event.attendances.length %></p>
                <p> Durée : <%= @event.duration %> minutes</p>
                <p> fin de l'évent : <%= @event.end_date %></p>
                <div class="lign"> <hr> </div>
                <div class="row ">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
